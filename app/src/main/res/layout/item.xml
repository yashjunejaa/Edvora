<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="16dp"
    android:orientation="vertical"
    android:paddingHorizontal="27sp"
    android:paddingVertical="24sp"
    android:background="@drawable/rectangle">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="148sp"
        android:id="@+id/img"
        android:layout_marginBottom="20sp"
        android:src="@drawable/ic_launcher_background"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/city"
            android:layout_alignParentLeft="true"
            android:textColor="#ffffff"
            android:background="@drawable/text"
            android:textAlignment="center"
            android:paddingHorizontal="10sp"
            android:paddingVertical="4sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/state"
            android:layout_alignParentRight="true"
            android:textColor="#ffffff"
            android:background="@drawable/text"
            android:textAlignment="center"
            android:paddingHorizontal="10sp"
            android:paddingVertical="4sp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ride_id"
        android:text="Ride ID: "
        android:layout_marginTop="12sp"
        android:textSize="18sp"
        android:textColor="#cfcfcf"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/original_station"
        android:text="Original Station: "
        android:layout_marginTop="12sp"
        android:textSize="18sp"
        android:textColor="#cfcfcf"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/path"
        android:text="Station Path: "
        android:layout_marginTop="12sp"
        android:textSize="18sp"
        android:textColor="#cfcfcf"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:text="Date: "
        android:layout_marginTop="12sp"
        android:textSize="18sp"
        android:textColor="#cfcfcf"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/distance"
        android:text="Distance: "
        android:layout_marginTop="12sp"
        android:textSize="18sp"
        android:textColor="#cfcfcf"/>

</LinearLayout>